@model CramSchoolManagement.Areas.Students.Models.students_attendance

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Students/Views/Shared/_Students.cshtml";
}

<h2>@ViewBag.StudentName</h2>

<h3>本当に削除してもよろしいですか？</h3>
<div>
    <h4>出席削除</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.attendance_day)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.attendance_day)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.start_time)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.start_time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.end_time)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.end_time)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="削除する" class="btn btn-default" /> |
            @Html.ActionLink("出席一覧へ戻る", "Index")
        </div>
    }
</div>
