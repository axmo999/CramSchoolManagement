@model IEnumerable<CramSchoolManagement.Areas.Settings.Models.atteds_m>

@{
    ViewBag.Title = "出席月一覧";
    Layout = "~/Areas/Settings/Views/Shared/_Settings.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("出席月新規作成", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.year_month)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.g0_count)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.g1_count)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.g2_count)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.g3_count)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.year_month)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.g0_count)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.g1_count)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.g2_count)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.g3_count)
        </td>
        <td>
            @Html.ActionLink("編集", "Edit", new { id=item.attend_id }) |
            @Html.ActionLink("削除", "Delete", new { id=item.attend_id })
        </td>
    </tr>
}

</table>
