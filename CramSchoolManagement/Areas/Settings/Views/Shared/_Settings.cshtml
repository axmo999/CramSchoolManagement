<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap -->
    @Styles.Render("~/Content/honoka/css")

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    
</head>
<body>
    <header class="page-header">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink(@CramSchoolManagement.Commons.Utility.ApplicationName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("トップに戻る", "Home/Index", new { area = "" })</li>*@
                        <li>@Html.ActionLink("学校一覧", "Index", "schools_m")</li>
                        <li>@Html.ActionLink("学校区分一覧", "Index", "divisions_m")</li>
                        <li>@Html.ActionLink("テスト区分一覧", "Index", "exams_m")</li>
                        <li>@Html.ActionLink("教科一覧", "Index", "classes_m")</li>
                        <li>@Html.ActionLink("講師一覧", "Index", "teachers_m")</li>
                        @*<li>@Html.ActionLink("教室一覧", "Index", "offices_m")</li>*@
                        @*<li>@Html.ActionLink("性別一覧", "Index", "gender_m")</li>*@
                        <li>@Html.ActionLink("学年一覧", "Index", "age_m")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <div id="body">
        <div class="container">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
    </div>

    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - CramSchoolManagement</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/honoka/js")
    @RenderSection("scripts", required: false)
</body>
</html>
